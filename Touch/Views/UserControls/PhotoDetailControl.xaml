<UserControl
    x:Class="Touch.Views.UserControls.PhotoDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:Name="DetailGrid" SizeChanged="DetailGrid_SizeChanged">
        <Border Background="Black" Opacity="0.8" Tapped="MaskBorder_Tapped" />
        <Image x:Name="DetailImage" Source="{x:Bind PhotoDetailImageViewModel.ThumbnailImage, Mode=OneWay}" Stretch="Uniform"/>
    </Grid>
</UserControl>
