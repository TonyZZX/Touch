<Page
    x:Class="Touch.Views.Pages.StreetViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="using:Touch.Views.UserControls"
    mc:Ignorable="d"
    Loaded="Page_Loaded">

    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition />
        </TransitionCollection>
    </Page.Transitions>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!-- 街景地图 -->
            <WebView x:Name="Webview1" Grid.Row="0" />
            <Button Grid.Row="1" Click="Button_Click" HorizontalAlignment="Center" >街景展示</Button>
            <!--Source="ms-appx-web:///Web/Test.html"-->
            <!-- 返回按钮 -->
            <userControls:BackButtonControl x:Name="BackButtonControl" />
        </Grid>
        <!-- 街景图片 -->
        <userControls:StreetGalleryControl x:Name="StreetGalleryControl" Shown="False" OnBackButtonClicked="ShowEndButton"/>
        <userControls:ProgressRingGridControl x:Name="ProgressRingGrid" />
    </Grid>
</Page>