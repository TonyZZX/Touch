<Page
    x:Class="Touch.Views.Pages.TestPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Margin="50">
            <Image Name="MyImage" Height="200" Stretch="Uniform" />
            <StackPanel Orientation="Horizontal">
                <TextBlock Name="PathText" />
                <Button Content="Select" Click="SelectButton_ClickAsync" />
                <Button Content="Upload" Click="UploadButton_ClickAsync" />
            </StackPanel>
            <TextBlock Name="LabelResultText" />
        </StackPanel>
    </Grid>
</Page>